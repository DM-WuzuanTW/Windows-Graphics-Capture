{
    "name": "window-exclusion-tool",
    "version": "1.0.0",
    "description": "Windows Graphics Capture - Window Exclusion Tool",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "rebuild": "electron-rebuild",
        "build": "electron-builder",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DM-WuzuanTW/Windows-Graphics-Capture.git"
    },
    "keywords": [
        "windows",
        "graphics-capture",
        "screen-capture",
        "privacy",
        "electron"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "electron-rebuild": "^3.2.9"
    },
    "dependencies": {
        "koffi": "^2.9.2"
    },
    "build": {
        "appId": "com.invisibility.windows",
        "productName": "Invisibility Windows",
        "publish": [
            {
                "provider": "github",
                "owner": "DM-WuzuanTW",
                "repo": "Windows-Graphics-Capture"
            }
        ],
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!**/*.ts",
            "!*.map",
            "!package-lock.json",
            "!dist/**/*",
            "!dll/*.obj",
            "!dll/*.lib",
            "!dll/*.exp",
            "!dll/*.cpp"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.png",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "portable": {
            "artifactName": "${productName} ${version} Portable.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Invisibility Windows",
            "deleteAppDataOnUninstall": true
        }
    }
}